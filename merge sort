#include<stdio.h>

void merge(int a[],int low,int high,int mid){
    int i,j,k,b[100];
    i=low,j=mid,k=low;
    while(i<=mid && j<=high){
        if(a[i]<a[j]){
            b[k]=a[i];
            i++,k++;
        }
        else{
            b[k]=a[j];
            k++,j++;
        }
    }
    while(i<=mid){
        b[k]=a[i];
            i++,k++;
    }
    while(j<=high){
         b[k]=a[j];
            k++,j++;
    }#include<stdio.h>

void merge(int a[],int low,int high,int mid){
    int i,j,k,b[100];
    i=low,j=mid,k=low;
    while(i<=mid && j<=high){
        if(a[i]<a[j]){
            b[k]=a[i];
            i++,k++;
        }
        else{
            b[k]=a[j];
            k++,j++;
        }
    }
    while(i<=mid){
        b[k]=a[i];
            i++,k++;
    }
    while(j<=high){
         b[k]=a[j];
            k++,j++;
    }
    for(int i=low;i<high;i++){
        a[i]=b[i];
    }
}

void sort(int a[],int low,int high){
    int mid=(low+high)/2;
    if(low<high){
        sort(a,low,mid);
        sort(a,mid+1,high);
        merge(a,low,high,mid);
    }
}

int main(){
     int a[]={3,5,1,4,2,6,8,7};
    int n=sizeof(a)/sizeof(a[0]);
    
    sort(a,0,n);
    for(int i=0;i<n;i++){
        printf("%d\t",a[i]);
    }
}
