    }
}

void sort(int a[],int low,int high){
    int mid=(low+high)/2;
    if(low<high){
        sort(a,low,mid);
        sort(a,mid+1,high);
        merge(a,low,high,mid);
    }
}

int main(){
     int a[]={3,5,1,4,2,6,8,7};
    int n=sizeof(a)/sizeof(a[0]);
    
    sort(a,0,n);
    for(int i=0;i<n;i++){
        printf("%d\t",a[i]);
    }
}
